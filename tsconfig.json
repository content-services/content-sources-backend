{
  "compilerOptions": {
    "target": "es2021",
    "jsx": "react",
    "strict": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true, // Include modules imported with ".json" extension
    "noImplicitAny": true, // Raise error on expressions and declarations with an implied 'any' type
    "paths": {
      "test-utils": ["./_playwright-tests/test-utils/src/index.ts"],
      "test-utils/*": ["./_playwright-tests/test-utils/src/*"]
    }
  },
  "include": ["_playwright-tests/tests", "_playwright-tests/test-utils"]
}
